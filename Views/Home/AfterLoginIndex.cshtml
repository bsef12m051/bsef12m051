
@model List<MyProject.Models.Ad>
@{
    ViewBag.Title = "AfterLoginIndex";
    Layout = "~/Views/Shared/AfterLoginLayout.cshtml";
}

<h2>AfterLoginIndex</h2>

  @foreach (var item in Model)
    {       
        
        
        <div class="row">
  <div class="span8">
    <div class="row">
      <div class="span8">
        <h4><strong>Title : @item.Title</strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="span3">
            <img src="@item.Image" class="img-rounded img-responsive">
      </div>
        </div>
                         @Html.ActionLink("updateAd", "updateAd", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })

                    </div>
      <div class="span6">      
        <p>
           <h5>Product Description:</h5>
              @item.Description
        </p>
        
      </div>
    </div>

    <div class="row">
      <div class="span8">
        <p>
            <h5>Poster Information:</h5>
            Name:    @item.User.FirstName @item.User.LastName
            <br />
            Email:   @item.User.Email
        </p>
      </div>
    </div>
 
<hr>
        
    }
        