    <script type="text/javascript">
        $(document).ready(function () {
            $("#c1").change(function () {
                var category = $("#c1").val();


                $("#body1").children().remove();
                
                 
                 
                $.getJSON("/Home/selectAdOnCategory?Category=" + category, function (list) {
                        $("#body1").append('<div>');
                    
                    if (list != null) {
                        $.each(list, function (i, x) {


                            $("#body1").append('<div class="container">');
                            $("#body1").append(' <div class="row"><div class="col-md-6"> <div class="well well-sm"><div class="row"><div class="col-xs-3 col-md-3 text-center"> ');

                            $("#body1").append('<h2>' + x.Title + '</h2>');

                            $("#body1").append('<div class="span3"><img src="' + x.Image + '" class="img-rounded img-responsive" />');
                            $("#body1").append('<p>' + x.Description + '</p>');
                            $("#body1").append('<p>Price:' + x.Price + '</p>');
                            $("#body1").append(' <h6>Poster Information</h6>');



                            $("#body1").append('<p>' + x.FirstName + ' ' + x.LastName + '   ' + x.Email + '</p> ');

                            $("#body1").append(' </div></div>  </div></div></div></div> </div>');


                        });
                    }
                    else {
                        $("#body1").append('<p>Nothing Found</p>');
                    }
                    $("#body1").append('</div>');

                });

            });

        });
    </script>

